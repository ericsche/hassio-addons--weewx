{
  "name": "WeeWX",
  "version": "0.4.7",
  "slug": "hassio_weewx",
  "description": "Add-on for connecting weather stations to Hass.io using WeeWX and MQTT",
  "url": "https://github.com/ericsche/hassio-addons--weewx",
  "init": false,
  "arch": [
    "armv7",
    "aarch64",
    "amd64"
  ],
  "startup": "application",
  "boot": "auto",
  "map": [
    "config:rw"
  ],
  "options": {
    "data_path": "/config/weewx",
    "driver": "user.interceptor",
    "latitude": 47.5079,
    "longitude": 3.8406,
    "altitude": 134,
    "altitudeUnit": "meter",
    "location": "Maison",
    "units": "metricwx",
    "mqttUser": "mqttuser",
    "mqttPassword": "password"
  },
  "schema": {
    "data_path": "str",
    "driver": "str",
    "latitude": "float",
    "longitude": "float",
    "altitude": "int",
    "altitudeUnit": "str",
    "location": "str",
    "units": "str",
    "mqttUser": "str",
    "mqttPassword": "str"
  }
}
